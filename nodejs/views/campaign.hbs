<div class="center">
  <div class="layout">
    <div class="section">
      <div class="author">
        <div class="author__ava"><img src="{{celebrity_image_url}}" alt="" class="author__ava-el"></div>
        <div class="author__info">
          <div class="author__name">{{celebrity_name}}</div>
          <div class="author__title">{{title}}</div>
        </div>
      </div>
    </div>
    <div class="aside">
      <div class="price">18$</div>
    </div>
    <div class="section">
      <div class="slider">
        <div class="slider__list js-slider">
          {{#each images}}
            <div class="slider__item">
              <img src="{{filename}}" alt="" class="slider__item-pic">
              <div class="slider__label">
                <i class="icon icon-makes-an-impact-1"></i>
              </div>
            </div>
          {{/each}}
        </div>
        <div class="slider__previews js-slider-preview">
          {{#each images}}
            <div class="slider__previews-item">
              <img src="{{filename}}" alt="" class="slider__previews-img">
            </div>
          {{/each}}
        </div>
      </div>
    </div>
    <div class="aside">
